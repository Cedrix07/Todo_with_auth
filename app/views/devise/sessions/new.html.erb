
<div class="card p-2 mx-auto" style="max-width: 24rem;">
  <div class="card-header bg-transparent">
    <h4 class="card-title text-center">Sign in</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, class:'form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class:'form-label' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:'form-control mb-2' %>
          <%= link_to 'Forgot your password?', new_user_password_path, class:'d-block ' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-3">
            <%= f.check_box :remember_me, class:'form-check-input'%>
            <%= f.label :remember_me, class:'form-label'%>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:'btn btn-primary w-100' %>
        </div>

    <% end %>
  </div>
</div>






