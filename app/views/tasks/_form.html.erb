<div class="form-group mb-3">
    <%= f.label :name, class: "form-label"%>
    <%= f.text_field :name, placeholder: "Enter task name...",class: "form-control"%>
    <span class="d-block text-danger text-sm"><%= form_validation_errors(@task, :name) %></span>
</div>
    <div class="form-group mb-3">
    <%= f.label :description, class: "form-label"%>
    <%= f.text_area :description, placeholder: "Enter task description...",class: "form-control"%>
    <span class="d-block text-danger text-sm"><%= form_validation_errors(@task, :description) %></span>
</div>
    <div class="form-group mb-3">
    <%= f.label :due_date, class: "form-label"%>
    <%= f.date_field :due_date, class: "form-control", id:'due_date'%>
     <span class="d-block text-danger text-sm"><%= form_validation_errors(@task, :due_date) %></span>
</div>